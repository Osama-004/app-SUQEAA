@model WebApplication3.Models.District

@{
    ViewData["Title"] = "حذف المنطقة الفرعية";
}

<h1>حذف المنطقة الفرعية</h1>

<h3>هل أنت متأكد أنك تريد حذف هذه المنطقة الفرعية؟</h3>
<div>
    <h4>المنطقة الفرعية</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">الاسم</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">المنطقة الأم</dt>
        <dd class="col-sm-9">@(Model.Region != null ? Model.Region.Name : "غير محدد")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>
    </form>
</div>