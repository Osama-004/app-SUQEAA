@model WebApplication3.Models.Tank

@{
    ViewData["Title"] = "إضافة خزان جديد";
}

<h1>إضافة خزان جديد</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CurrentCapacity" class="control-label"></label>
                <input asp-for="CurrentCapacity" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="CurrentCapacity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PricePerLiter" class="control-label"></label>
                <input asp-for="PricePerLiter" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="PricePerLiter" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegionId" class="control-label">المنطقة</label>
                <select id="RegionId" asp-for="RegionId" class="form-control" asp-items="ViewBag.RegionId" required>
                    <option value="">-- اختر منطقة --</option>
                </select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DistrictId" class="control-label">المنطقة الفرعية (اختياري)</label>
                <select id="DistrictId" asp-for="DistrictId" class="form-control" asp-items="ViewBag.DistrictId">
                    <option value="">-- اختر منطقة فرعية --</option>
                </select>
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DriverId" class="control-label">السائق المسؤول</label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId" required>
                    <option value="">-- اختر سائق --</option>
                </select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="إنشاء" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // يمكن إضافة JavaScript لفلترة المناطق الفرعية هنا إذا أردت
        $(document).ready(function () {
            // تحميل المناطق الفرعية بناءً على المنطقة المختارة
            $('#RegionId').change(function () {
                var regionId = $(this).val();
                if (regionId) {
                    $.ajax({
                        url: '@Url.Action("GetDistrictsByRegion", "Home")', // تأكد من أن هذا الـ Action موجود في HomeController
                        type: 'GET',
                        data: { regionId: regionId },
                        success: function (data) {
                            $('#DistrictId').empty().append('<option value="">-- اختر منطقة فرعية --</option>');
                            $.each(data, function (i, district) {
                                $('#DistrictId').append($('<option>', {
                                    value: district.id,
                                    text: district.name
                                }));
                            });
                        },
                        error: function () {
                            console.log("Error loading districts.");
                        }
                    });
                } else {
                    $('#DistrictId').empty().append('<option value="">-- اختر منطقة فرعية --</option>');
                }
            });
        });
    </script>
}