@model List<WebApplication3.Models.Request>
@using WebApplication3.Models

@{
    ViewData["Title"] = "جميع الطلبات";
}

<h1>جميع الطلبات</h1>

<p>
    @* هذا الرابط معطل حالياً: <a asp-action="Create" class="btn btn-primary">إنشاء طلب جديد</a> *@
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>معرف الطلب</th>
                <th>الكمية (لتر)</th>
                <th>العميل</th>
                <th>الخزان</th>
                <th>السائق</th>
                <th>تاريخ الطلب</th>
                <th>تاريخ التوصيل</th>
                <th>الحالة</th>
                <th>إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Customer != null ? item.Customer.Name : "غير معروف")</td>
                    <td>@(item.Tank != null ? item.Tank.Name : "غير محدد")</td>
                    <td>@(item.Driver != null ? item.Driver.Name : "لم يتم التعيين")</td>
                    <td>@item.RequestDate.ToShortDateString()</td>
                    <td>@(item.DeliveryDate?.ToShortDateString() ?? "لم يتم بعد")</td>
                    <td>
                        @{
                            string statusText = item.Status switch
                            {
                                RequestStatus.Pending => "قيد الانتظار",
                                RequestStatus.InDelivery => "قيد التوصيل",
                                RequestStatus.Delivered => "تم التوصيل",
                                RequestStatus.Cancelled => "ملغى",
                                _ => "غير معروف"
                            };
                            string statusBadgeClass = item.Status switch
                            {
                                RequestStatus.Pending => "bg-warning text-dark",
                                RequestStatus.InDelivery => "bg-info text-white",
                                RequestStatus.Delivered => "bg-success text-white",
                                RequestStatus.Cancelled => "bg-danger text-white",
                                _ => "bg-secondary text-white"
                            };
                        }
                        <span class="badge @statusBadgeClass">@statusText</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">تفاصيل</a>
                        @if (item.Status == RequestStatus.Pending)
                        {
                            @* <a asp-action="Accept" asp-route-id="@item.Id" class="btn btn-success btn-sm">قبول</a> *@
                        }
                        @if (item.Status == RequestStatus.InDelivery)
                        {
                            <a asp-action="Complete" asp-route-id="@item.Id" class="btn btn-success btn-sm" onclick="return confirm('هل أنت متأكد أنك تريد تأكيد توصيل هذا الطلب؟');">تم التوصيل</a>
                        }
                        @if (item.Status == RequestStatus.Pending || item.Status == RequestStatus.InDelivery)
                        {
                            <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-warning btn-sm" onclick="return confirm('هل أنت متأكد أنك تريد إلغاء هذا الطلب؟');">إلغاء</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">تعديل</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        لا توجد طلبات لعرضها حاليًا.
    </div>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
